{
  "name": "taskonfirm",
  "description": "Send a request-change when any checkbox in the body of PR isn't checked.",
  "version": "1.0.0",
  "main": "index.ts",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@actions/github": "^4.0.0",
    "@types/jest": "^26.0.19",
    "ts-jest": "^26.4.4"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "husky": "^4.3.5",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "typescript": "^4.1.3"
  },
  "scripts": {
    "test": "jest",
    "lint": "yarn lint:eslint && yarn lint:prettier",
    "lint:eslint": "eslint src/**/*.ts",
    "lint:prettier": "prettier -c src/**/*.ts",
    "fix": "yarn fix:prettier && yarn fix:eslint",
    "fix:eslint": "eslint --fix src/**/*.ts",
    "fix:prettier": "prettier -w src/**/*.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "if git diff --name-only --staged | grep 'src/'; then ncc build src/index.ts --license licenses.txt && git add dist/; else echo 'unstaged.'; fi"
    }
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  },
  "ts-jest": {
    "tsconfig": "tsconfig.json"
  }
}
